@model List<Games>

@{
    ViewData["Title"] = "Home";
}



<div class="container">
        <h2 class="display-4">Game Inventory Manager (GIM)</h2>
    <div>
        <div class="row">
            <a class="btn btn-warning" asp-controller="Home" asp-action="Create"><i class="bi bi-plus-square-fill"></i> Add Game</a>
        </div><br />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Game Name</th>
                    <th>Price</th>
                    <th>Developper</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var game in Model)
                {
                    <tr>
                        <td>@game.id</td>
                        <td>@game.name</td>
                        <td>@game.price €</td >
                        <td>@game.possessor</td>
                        <td>
                            <div>
                                <a class="btn btn-secondary" asp-controller="Home" asp-action="Edit" asp-route-id="@game.id" ><i class="bi bi-pencil-square"></i> Edit</a>
                                <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@game.id" onclick="confirm('Are you sure you want to delete this game?');"><i class="bi bi-trash-fill"></i> Delete</a>
                            </div>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>